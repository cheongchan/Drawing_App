<div class="drawing">
  <div class="top-bar">
    <div id="title">
      <h1><%= link_to("Gestalt Illusion", root_path) %></h1>
    </div>  
  </div>
</div>  


<div class="list">
<table>
  <thead>
    <tr>
      <th>Canvas</th>
    </tr>
  </thead>

  <tbody>
    <% @draws.each do |draw| %>
      <tr>
        <td><%= draw.canvas_name %></td>
        <td><%= link_to 'Show', draw %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Draw', new_draw_path %>
</div>